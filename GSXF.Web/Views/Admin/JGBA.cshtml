
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>JGBA</title>

    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/Content/easyuijs")

    <script>
        $(document).ready(function () {
            $("#next-page").click(function () {
                $('#tabs').tabs('select', "人员信息");

            });
            $("#front-page").click(function () {
                $('#tabs').tabs('select', "机构信息");
            });
            var editIndex = undefined;
            
            //添加人员信息到表中
            $("#BtnAddEmployee").click(function () {
                $("#employeeTable").datagrid('appendRow', {
                    Name:$("#Name").val(),
                    Gender:$("#Gender").val(),
                    Level: $("#Level").val(),
                    CertificateNumber: $("#CertificateNumber").val(),
                    IdentificationNumber: $("#IdentificationNumber").val(),
                    IsDirector: $("#IsDirector").val(),
                    OfficePhone: $("#OfficePhone").val(),
                    MobilePhone:$("MobilePhone").val()
                });
            });
            //提交机构备案信息
            $("#Submit").click(function () {
                var _list = {};
                var rows = $('#dg').datagrid('getRows');
                for (var i = 0; i < rows.length; i++) {
                    var row = rows[i];
                    _list["list[" + i + "].Name"] = rows[i].Name;
                    _list["list[" + i + "].Gender"] = rows[i].Gender;
                    _list["list[" + i + "].Level"] = rows[i].Level;
                    _list["list[" + i + "].CertificateNumber"] = rows[i].CertificateNumber;
                    _list["list[" + i + "].IdentificationNumber"] = rows[i].IdentificationNumber;
                    _list["list[" + i + "].IsDirector"] = rows[i].IsDirector;
                    _list["list[" + i + "].OfficePhone"] = rows[i].OfficePhone;
                    _list["list[" + i + "].MobilePhone"] = rows[i].MobilePhone;
                }
                $.ajax({
                    url: '/Home/AddEmployee',
                    data: _list,
                    dataType: "json",
                    type: "POST",
                    success: function (data) {
                        alert(data.rows + "," + data.result);
                    }
                });
            });
            //初始化人员信息表
            $('#dg').datagrid({
                columns: [[
                    {
                        field: 'Name',
                        title: '姓名',
                        width: 80,
                        editor: {
                            type: 'textbox',
                            options: {
                                required: true
                            }
                        }
                    },
                    {
                        field: 'Gender',
                        title: '性别',
                        width:60,
                        formatter:function(value){
                            if(value == 0)
                                return '男';
                            else if(value == 1)
                                return '女';
                            else return '未知';          
                        },
                        editor:{type:'combobox',
                            options:{
                                valueField:'Id',
                                textField:'Text',
                                method:'get',
                                url:'/Data/GenderList',
                                required:true,
                                editable:false,
                                panelHeight:'auto'
                            }
                        }
                    },
                    {
                        field: 'Level',
                        title: '人员类别',
                        width:160,
                        formatter:function(value){
                            if(value == 0)
                                return '一级注册消防工程师';
                            else if(value == 1)
                                return '二级注册消防工程师';
                            else if(value == 2)
                                return '建(构)筑物消防员(初级)';
                            else if(value == 3)
                                return '建(构)筑物消防员(中级)';
                            else if(value == 4)
                                return '建(构)筑物消防员(高级)';     
                        },
                        editor:{type:'combobox',
                            options:{
                                valueField:'Id',
                                textField:'Text',
                                method:'get',
                                url:'/Data/EmployeeLevelList',
                                required:true,
                                editable:false,
                                panelHeight:'auto'
                            }
                        }
                    },
                    {
                        field: 'CertificateNumber',
                        title: '证书编号',
                        width: 100,
                        editor: {
                            type: 'textbox',
                            options: {
                                required: true
                            }
                        }
                    },
                    {
                        field: 'IdentificationNumber',
                        title: '身份证号',
                        width: 100,
                        editor: {
                            type: 'textbox',
                            options: {
                                required: true
                            }
                        }
                    },
                    {
                        field: 'IsDirector',
                        title: '是否是技术负责人',
                        width: 100,
                        align: 'center',
                        editor: {
                            type: 'checkbox',
                            options: {
                                on: '是',
                                off: '否',
                                required: true
                            }
                        }
                    },
                    {
                        field: 'OfficePhone',
                        title: '办公电话',
                        width: 120,
                        editor: {
                            type: 'textbox',
                            options: {
                                required: true
                            }
                        }
                    },
                    {
                        field: 'MobilePhone',
                        title: '手机号码',
                        width: 120,
                        editor: {
                            type: 'textbox',
                            options: {
                                required: true
                            }
                        }
                    }
                ]],
                rownumbers: true,
                singleSelect: true,
                onClickRow: onClickRow
            });
        });
    </script>

</head>
<body style="padding:0px;margin:0px;">
    <div class="easyui-tabs" border="false" id="tabs">
        <div title="机构信息" style="padding:10px">
            
            <form id="jgxxForm" method="post">
                <table id="jgxx">
                    <tr>
                        <td>机构名称：</td>
                        <td colspan="3">
                            <input class="easyui-textbox" style="width:100%;">
                        </td>
                    </tr>
                    <tr>
                        <td>资质类别：</td>
                        <td>
                            <select class="easyui-combobox" name="state" editable="false">
                                <option value="1">维修保养检测</option>
                                <option value="2">消防安全评估</option>
                            </select>
                        </td>
                        <td>资质等级：</td>
                        <td>
                            <select class="easyui-combobox" name="state"
                                    data-options="panelHeight:'102px'" editable="false">
                                <option value="1">一级</option>
                                <option value="2">二级</option>
                                <option value="3">三级</option>
                                <option value="4">临时一级</option>
                                <option value="5">临时二级</option>
                                <option value="6">临时三级</option>
                            </select>
                        </td>
                    </tr>
                    <tr>

                        <td>证书编号：</td>
                        <td colspan="2">
                            <input class="easyui-textbox" style="width:100%;">
                        </td>
                        <td style="text-align:right;">证书有效日期：</td>
                        <td>
                            <input class="easyui-datebox" editable="false">
                        </td>
                    </tr>
                    <tr>
                        <td>办公场所地址：</td>
                        <td colspan="3"><input class="easyui-textbox" style="width:100%">&nbsp;</td>
                        <td>办公场所建筑面积：</td>
                        <td><input class="easyui-textbox" style="height:23px">m2&nbsp;</td>
                        <td><a id="addAddressBtn">新增</a></td>
                    </tr>

                    <tr>
                        <td>办公场所建筑总面积：</td>
                        <td><input class="easyui-textbox">m2</td>
                        <td>注册资金：</td>
                        <td><input class="easyui-textbox">万元</td>
                    </tr>
                    <tr>
                        <td>法定代表人：</td>
                        <td><input class="easyui-textbox"></td>
                        <td>办公电话：</td>
                        <td><input class="easyui-textbox"></td>
                        <td style="text-align:right">手机号码：</td>
                        <td><input class="easyui-textbox"></td>
                    </tr>
                    <tr>
                        <td>联系人：</td>
                        <td><input class="easyui-textbox"></td>
                        <td>办公电话：</td>
                        <td><input class="easyui-textbox"></td>
                        <td style="text-align:right">手机号码：</td>
                        <td><input class="easyui-textbox"></td>
                    </tr>
                    <tr>
                        <td>传真：</td>
                        <td><input class="easyui-textbox"></td>
                        <td>邮政编码：</td>
                        <td><input class="easyui-textbox"></td>
                        <td style="text-align:right">电子邮件：</td>
                        <td><input class="easyui-textbox"></td>
                    </tr>
                    <tr>
                        <td>人员信息汇总：</td>
                        <td colspan="5"><input class="easyui-textbox" data-options="multiline:true" value="专业技术人员0人，操作人员0人" style="height:38px;width:100%" disabled="disabled"></td>
                    </tr>
                    <tr>
                        <td>执业开通状态：</td>
                        <td>待开通（未申请）</td>
                    </tr>
                </table>
            </form>
            
            <br />
            <div style="width:100px;margin:0 auto; height:50px;">
                <a href="#" class="easyui-linkbutton" style="float:right;" id="next-page">下一页</a>
            </div>
            <div style="color:red">
                提示：<br />
                1.机构备案申请提交以后可以修改人员信息，其他信息请到消防总队申请修改。<br />
                2.请尽快开通机构备案申请，申请通过后才能对项目进行登记。
            </div>

        </div>
        <div title="人员信息" style="padding:0px;">
            <div id="tb" style="height:auto">
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="append()">添加</a>|
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="removeit()">删除</a>|
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="accept()">保存</a>|
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-undo',plain:true" onclick="reject()">撤销</a>
            </div>
            <table id="dg" class="easyui-datagrid" style="width:100%;height:80%"></table>
            <script type="text/javascript">
                var editIndex = undefined;
                function endEditing() {
                    if (editIndex == undefined) { return true }
                    if ($('#dg').datagrid('validateRow', editIndex)) {
                        //var ed = $('#dg').datagrid('getEditor', { index: editIndex, field: 'Gender' });
                        //var gendertext = $(ed.target).combobox('getText');
                        //$('#dg').datagrid('getRows')[editIndex]['Gender'] = gendertext;
                        //console.log($('#dg').datagrid('getRows')[editIndex]);
                        $('#dg').datagrid('endEdit', editIndex);
                        editIndex = undefined;
                        return true;
                    } else {
                        return false;
                    }
                }
                function onClickRow(index) {
                    if (editIndex != index) {
                        if (endEditing()) {
                            $('#dg').datagrid('selectRow', index)
                                    .datagrid('beginEdit', index);
                            editIndex = index;
                        } else {
                            $('#dg').datagrid('selectRow', editIndex);
                        }
                    }
                }
                function append() {
                    if (endEditing()) {
                        $('#dg').datagrid('appendRow', { IsDirector: '是' });
                        editIndex = $('#dg').datagrid('getRows').length - 1;
                        $('#dg').datagrid('selectRow', editIndex)
                                .datagrid('beginEdit', editIndex);
                    }
                }
                function removeit() {
                    if (editIndex == undefined) { return }
                    $('#dg').datagrid('cancelEdit', editIndex)
                            .datagrid('deleteRow', editIndex);
                    editIndex = undefined;
                }
                function accept() {
                    if (endEditing()) {
                        $('#dg').datagrid('acceptChanges');
                    }
                }
                function reject() {
                    $('#dg').datagrid('rejectChanges');
                    editIndex = undefined;
                }
                function getChanges() {
                    var rows = $('#dg').datagrid('getChanges');
                    alert(rows.length + ' rows are changed!');
                }
            </script>

            <div style="margin:0 auto;width:200px;">
                <a href="#" class="easyui-linkbutton" id="front-page">上一页</a>
                <a href="#" class="easyui-linkbutton" iconCls="icon-save" id="Submit">提交</a>
            </div>
        </div>
    </div>
</body>
</html>
