
@{
    Layout = null;
}
@Styles.Render("~/Content/easyui")
@Scripts.Render("~/Content/easyuijs")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>服务机构首页</title>

    <link href="~/Content/admin/admin.css" rel="stylesheet" />
    <script src="~/Content/admin/admin.js"></script>

</head>
<body class="easyui-layout">
    <div region="north" split="true" style="overflow:hidden; height:100px;">
        <div class="top-bg"></div>
    </div>

    <div region="south" border="true" split="true" style="overflow:hidden;height:40px;">
        <div class="footer">版权所有:甘肃省消防总队</div>
    </div>

    <div region="west" split="true" title="菜单" style="width:200px;">
        <div id="aa" class="easyui-accordion" style="position:absolute;top:27px;left:0px;right:0px;bottom:0px;">
            <ul class="easyui-tree">
                <li>
                    <span><a target="mainFrame" href=@Url.Action("Index_FWJG")>主页</a></span>
                </li>
                <li>
                    <span><a target="mainFrame" href=@Url.Action("DJXM")>登记项目</a></span>
                </li>
                <li>
                    <span><a target="mainFrame" href=@Url.Action("CXXM")>查询项目</a></span>
                </li>

                <li>
                    <span><a target="mainFrame" href=@Url.Action("RYBA")>人员备案</a></span>
                </li>
            </ul>
        </div>
    </div>
    <div id="center" region="center">
        <div id="tabs" class="easyui-tabs" fit="true" border="false">
            <div title="主页" style="padding: 2px;" id="home">
                <table class="easyui-datagrid" pagination="true" title="当前项目" data-options="dataType:'json',
                       url:'/Data/MyProjects'
                       " height="600px">
                    <thead>
                        <tr>
                            <th field="Name" width="300px">项目名称</th>
                            <th field="Progress" width="80px">当前状态</th>
                            <th field="t4" width="160px">项目进度</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
